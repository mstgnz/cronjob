{{template "base" . }}

{{define "css"}}
<style>
    .hstack {
        visibility:hidden;
    }
    tr:hover .hstack{
        visibility:visible;
    }
</style>
{{end}}

{{define "notificationList" }}
<table class="table" hx-get="/notifications-pagination" hx-target="#tbody" hx-swap="innerHTML" hx-trigger="load">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
            <th scope="col">Is Email</th>
            <th scope="col">Is Message</th>
            <th scope="col">Active</th>
            <th scope="col">Created</th>
            <th scope="col">Updated</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody id="tbody" hx-target="closest tr" hx-swap="outerHTML"></tbody>
</table>
<!-- Pagination -->
<div class="mt-4">
    <nav>
        <ul class="pagination" hx-get="/notifications-pagination?pagination" hx-target="this" hx-swap="innerHTML" hx-trigger="load"></ul>
    </nav>
</div>
{{end}}